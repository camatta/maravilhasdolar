{
  "flex-layout.row#main-slider": {
    "props": {
      "blockClass": ["main-slider-container", "custom-container"]
    },
    "children": ["flex-layout.col#main-slider"]
  },
  "flex-layout.col#main-slider": {
    "children": ["list-context.image-list#main-slider"]
  },
 "list-context.image-list#main-slider": {
  "title": "Carrossel Principal",
    "children": ["slider-layout#main-slider"],
    "props": {
      "images": [
        {
          "image": "assets/slider-principal/desk/BannerTopo.png",
          "mobileImage": "assets/slider-principal/kit-neutrogena.png",
          "description": "Dolce Gusto - Maravilhas do Lar"
        },
        {
          "image": "assets/slider-principal/desk/BannerTopo.png",
          "mobileImage": "assets/slider-principal/dove.png",
          "description": "Dolce Gusto - Maravilhas do Lar"
        }
      ]
    }
  },

  "slider-layout#main-slider": {
    "props": {
     "itemsPerPage": {
        "desktop": 1,
        "tablet": 1,
        "phone": 1
      },
      "autoplay": {
        "timeout": "3000",
        "stopOnHover": true
      },
      "infinite": true,
      "blockClass": ["main-slider"],
      "arrowSize": 9
    }
  }
}